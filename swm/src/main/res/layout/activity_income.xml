<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Income">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="365dp"
        android:layout_height="372dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="162dp"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/mainingresos" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtLayoutIngresos"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="530dp"
        android:layout_marginEnd="40dp"
        android:hint="Indicanos tus ingresos mensuales"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconTint="#575DFB">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtIngresos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnIndicar"
        android:layout_width="157dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="110dp"
        android:layout_gravity="center"

        android:layout_marginTop="23dp"
        android:backgroundTint="#000000"
        android:fontFamily="@font/montserrat_semiboldd"
        android:text="Indicar"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="101dp"
        android:textSize="20dp"
        android:fontFamily="@font/montserrat_semiboldd"
        android:textAlignment="center"
        android:text="Tell us..." />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:fontFamily="@font/montserrat_mediumm"
        android:text="What's the money flux \n that do you have monthly."
        android:textAlignment="center"
        android:textSize="15dp" />


</RelativeLayout>